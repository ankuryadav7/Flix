<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/padding_13"
    android:layout_marginLeft="@dimen/padding_3"
    android:layout_marginRight="@dimen/padding_3"
    android:background="@color/black">

    <ImageView
        android:id="@+id/previewImage"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/place_holder"
        app:layout_constraintDimensionRatio="2:3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/contentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:ellipsize="marquee"
        android:scrollHorizontally="true"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:paddingTop="@dimen/padding_9"
        android:paddingBottom="@dimen/padding_20"
        android:marqueeRepeatLimit="marquee_forever"
        android:fontFamily="@font/titillium_web_regular"
        android:text="........"
        android:textColor="@color/white"
        android:textSize="@dimen/list_title_txt_size"
        app:layout_constraintTop_toBottomOf="@id/previewImage"
        app:layout_constraintStart_toStartOf="parent">


    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>